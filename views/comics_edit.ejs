<%- include('partials/header') %>
<div class=container>
	<h1>Edit Comic</h1>
<form action="/comics/<%=  comic._id %>?_method=PUT" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" name="title" value="<%= comic.title %>">
  </div>
    <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" name="description" value="<%= comic.description %>">
  </div>
	 <div class="mb-3">
    <label for="author" class="form-label">Author</label>
    <input type="text" class="form-control" name="author" value="<%= comic.author %>">
  </div>
	 <div class="mb-3">
    <label for="publisher" class="form-label">Publisher</label>
    <input type="text" class="form-control" name="publisher" value="<%= comic.publisher %>">
  </div>
	 <div class="mb-3">
    <label for="date" class="form-label">Date</label>
    <input type="date" class="form-control" name="date" value="<%= comic.date.toISOString().split('T')[0] %>">
  </div>
	 <div class="mb-3">
    <label for="series" class="form-label">Series</label>
    <input type="text" class="form-control" name="series" value="<%= comic.series %>">
  </div>
	 <div class="mb-3">
    <label for="issue" class="form-label">Issue</label>
    <input type="number" class="form-control" name="issue" value="<%= comic.issue %>">
  </div>
	 <div class="mb-3">
    <label for="genre" class="form-label">Genre</label>
	<select class="form-control" id="genre" name="genre">
		<option disabled>-- Choose Below --</option>
		<option<%= comic.genre === 'Manga' ? 'selected' : ''%>>Manga</option>
		<option<%= comic.genre === 'Shonen' ? 'selected' : ''%>>Shonen</option>
		<option<%= comic.genre === 'slice-of-life' ? 'selected' : ''%>>Slice-of-Life</option>
		<option<%= comic.genre === 'horror' ? 'selected' : ''%>>Horror</option>
		<option<%= comic.genre === 'drama' ? 'selected' : ''%>>Drama</option>
		<option<%= comic.genre === 'historical' ? 'selected' : ''%>>Historical</option>
		<option<%= comic.genre === 'josei' ? 'selected' : ''%>>Josei</option>
		<option<%= comic.genre === 'comedy' ? 'selected' : ''%>>Comedy</option>
		<option<%= comic.genre === 'sports' ? 'selected' : ''%>>Sports</option>
	</select>
  </div>
  <div class="form-group form-check">
       <input type="checkbox" class="form-check-input" name="color" <%= comic.color ? 'checked' : ''%>>
 		<label for="color">Color?</label>
  </div>
    <div class="mb-3">
    <label for="image" >Link to Image</label>
    <input type="text" class="form-control" name="image" value="<%= comic.image %>">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>


<%- include('partials/footer') %>